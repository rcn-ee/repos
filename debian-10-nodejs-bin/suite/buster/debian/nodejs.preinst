#! /bin/sh -e

set -e

case "$1" in
	upgrade|install)

        if [ -d /usr/lib/node_modules/npm ]; then
            echo "Detected old npm client, removing..."
            rm -rf /usr/lib/node_modules/npm
        fi
        ;;

	*)

        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
        ;;

esac

#DEBHELPER#

exit 0

