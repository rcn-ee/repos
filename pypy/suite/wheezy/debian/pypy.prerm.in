#!/bin/sh

if [ '#ARCH#' = 'i386' ]; then
    pypy -c '' 2>/dev/null
    if [ $? -eq 132 ]; then
        echo "PyPy doesn't appear to support this CPU." >&2
        echo "SSE2 is required." >&2
        exit 0
    fi
fi

set -e

case "$1" in
    remove|deconfigure|upgrade)
        pypyclean /usr/lib/pypy/lib-python /usr/lib/pypy/lib_pypy
    ;;

    failed-upgrade)
    ;;

    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

#DEBHELPER#

exit 0
